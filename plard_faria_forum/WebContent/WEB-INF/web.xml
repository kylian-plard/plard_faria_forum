<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Forum Plard Faria</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/header.jsp</include-prelude>
      <include-coda>/WEB-INF/footer.jsp</include-coda>
    </jsp-property-group>
    <jsp-property-group>
      <description>Configue de l'encodage des pages JSP</description>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  <listener>
    <listener-class>com.plard_faria_forum.modele.InitialisationDAOFactory</listener-class>
  </listener>
  <filter>
    <filter-name>encodingfilter</filter-name>
    <filter-class>com.plard_faria_forum.controleur.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <servlet>
    <display-name>Index</display-name>
    <servlet-name>Index</servlet-name>
    <servlet-class>com.plard_faria_forum.controleur.Index</servlet-class>
  </servlet>
  <servlet>
    <display-name>Create User</display-name>
    <servlet-name>CreateUser</servlet-name>
    <servlet-class>com.plard_faria_forum.controleur.CreateUser</servlet-class>
  </servlet>
  <servlet>
    <display-name>Deconnexion</display-name>
    <servlet-name>Deconnexion</servlet-name>
    <servlet-class>com.plard_faria_forum.controleur.Deconnexion</servlet-class>
  </servlet>
  <servlet>
    <display-name>Accueil</display-name>
    <servlet-name>Accueil</servlet-name>
    <servlet-class>com.plard_faria_forum.controleur.Accueil</servlet-class>
  </servlet>
  <servlet>
    <display-name>Hub</display-name>
    <servlet-name>Hub</servlet-name>
    <servlet-class>com.plard_faria_forum.controleur.Hub</servlet-class>
  </servlet>
  <servlet>
    <display-name>Fil de Message</display-name>
    <servlet-name>FilMessage</servlet-name>
    <servlet-class>com.plard_faria_forum.controleur.FilMessage</servlet-class>
  </servlet>
  <servlet>
    <display-name>Suppresion d'un compte</display-name>
    <servlet-name>DeleteUser</servlet-name>
    <servlet-class>com.plard_faria_forum.controleur.DeleteUser</servlet-class>
  </servlet>
  <servlet>
    <display-name>Changer les droits d'aministration</display-name>
    <servlet-name>ChangeLevel</servlet-name>
    <servlet-class>com.plard_faria_forum.controleur.ChangeLevel</servlet-class>
  </servlet>
  <filter-mapping>
    <filter-name>encodingfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateUser</servlet-name>
    <url-pattern>/inscription</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Deconnexion</servlet-name>
    <url-pattern>/deconnexion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Hub</servlet-name>
    <url-pattern>/salon</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FilMessage</servlet-name>
    <url-pattern>/sujet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteUser</servlet-name>
    <url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChangeLevel</servlet-name>
    <url-pattern>/changeLevel</url-pattern>
  </servlet-mapping>
</web-app>